nav#sidebar.active
    div#sidebar-content
        .sidebar-header(id=user.tableID)
            h3 Welcome,
            h3#username #{user.username}
            strong Welcome
        ul.list-unstyled.components
            li.active
                a.dropdown-toggle(href='#userDropdown', data-toggle='collapse', aria-expanded='false') User
                ul#userDropdown.collapse.list-unstyled
                    li
                        div.user-form
                            a(href='/user/logout') Logout
            if menu
                li.active
                    a.dropdown-toggle(href='#NavigationDropdown', data-toggle='collapse', aria-expanded='false') Navigation
                    ul#NavigationDropdown.collapse.list-unstyled
                        for obj in menu
                            if obj.foodList.length > 0
                                - var categoryName = obj.foodList[0].category;
                                li
                                    div.nav-form
                                        span.icon-cursor
                                        a(href='#slider-' + categoryName) #{categoryName}
                li.active
                    a.dropdown-toggle(href='#FilterDropdown', data-toggle='collapse', aria-expanded='false') Filter
                    ul#FilterDropdown.collapse.list-unstyled
                        for obj in menu
                            if obj.foodList.length > 0
                                - var categoryName = obj.foodList[0].category;
                                li
                                    .custom-control.custom-checkbox
                                        input.custom-control-input(type='checkbox', checked="checked", id='category-' + categoryName)
                                        label.custom-control-label(for='category-' + categoryName) #{categoryName}
                li.active
                    a.dropdown-toggle(href='#SearchDropdown', data-toggle='collapse', aria-expanded='false') Search
                    ul#SearchDropdown.collapse.list-unstyled
                        li
                            div.form-group#search-form
                                span.icon-magnifier#search-icon
                                input.form-control#search-input(type='text', placeholder='Type here')
                li.active
                    a.dropdown-toggle(href='#excludeDropdown', data-toggle='collapse', aria-expanded='false') Exclude
                    ul#excludeDropdown.collapse.list-unstyled
                        li
                            div.form-group#search-form
                                span.icon-ban#search-icon
                                input.form-control#exclude-input(type='text', placeholder='Type here')
    div#sidebar-scrollup
        span.icon-arrow-up-circle