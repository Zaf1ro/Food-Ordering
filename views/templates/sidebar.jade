nav#sidebar.active
    .sidebar-header(id=user.tableID)
        h3#welcome Welcome, #{user.username}
    ul.list-unstyled.components
        li.active
            a.dropdown-toggle(href='#userList', data-toggle='collapse', aria-expanded='false') User
            ul#userList.collapse.list-unstyled
                li
                    a(href='#') Change Name
                li
                    a(href='/user/logout') Logout
        if menu
            li.active
                a.dropdown-toggle(href='#CategoryList', data-toggle='collapse', aria-expanded='false') Category
                ul#CategoryList.collapse.list-unstyled
                    for obj in menu
                        if obj.foodList.length > 0
                            - var categoryName = obj.foodList[0].category;
                            li
                                .custom-control.custom-checkbox
                                    input.custom-control-input(type='checkbox', checked="checked", id='category-' + categoryName)
                                    label.custom-control-label(for='category-' + categoryName) #{categoryName}
            li.active
                a.dropdown-toggle(href='#SearchList', data-toggle='collapse', aria-expanded='false') Search
                ul#SearchList.collapse.list-unstyled
                    li
                        div.form-group#search-form
                            span.icon-magnifier.search-icon#search-icon
                            input.form-control#search-input(type='text', placeholder='Search')
