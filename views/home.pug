extends template-page.pug

block content
    style(type='text/css').
        body {
            background: url(../images/bg/home.jpg) no-repeat;
        }
    section.slider.slider-home.d-flex.align-items-center
        .container
            .row.d-flex.justify-content-center
                .col-md-12
                    .slider-title_box
                        .row
                            .col-md-12
                                .slider-content_wrap
                                    h1 The Best Restaurant in NYC
                                    h5 Let's uncover the best places to eat, drink, and all you need.
                        .row.d-flex.justify-content-center
                            .col-md-10
                                form.form-wrap.mt-4(method='POST' action='/user/register')
                                    // user control
                                    if user && user.username && user.tableID
                                        .btn-group(role='group', aria-label='Basic example', , style='display: flex; align-items: center; justify-content: center;')
                                            button.btn-form(type='submit')
                                                span.icon-magnifier.search-icon
                                                | Start To Order
                                    else
                                        .btn-group(role='group', aria-label='Basic example')
                                            input.btn-group1(type='text' name="username" placeholder='What is Your Name' required)
                                            select.btn-group2(name='tableID' required)
                                                option(value='' disabled="disabled" selected='selected') Select a Table ID
                                                - for (var id = 0; id < tableNum; id++)
                                                    option(value=id) #{id + 1}
                                            button.btn-form(type='submit')
                                                span.icon-magnifier.search-icon
                                                | Start To Order
