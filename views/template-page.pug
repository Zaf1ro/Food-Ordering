        block styles

    body
        .wrapper
            if user
                include templates/sidebar.pug
            #content
                if user
                    nav.navbar.navbar-expand-lg.navbar-light
                        div.container-fluid
                else
                    nav.navbar.navbar-expand-lg.navbar-light
                        div.container-fluid
                block content
        include templates/footer.pug

