extends template-page.pug

block content
    section.slider.slider-menu.d-flex.align-items-center
        .container
            .row.justify-content-center
                .col-md-12.filler-3
                .col-md-6
                    .styled-heading
                        h3="Order"
            if orders && orders.length > 0
                for order, idx in orders
                    .row
                        .col-12.grid-margin
                            .card
                                .card-body
                                    h4.card-title Order #{idx}
                                    .table-responsive
                                        table.table
                                            thead
                                                tr
                                                    th
                                                        | Food
                                                    th
                                                        | Number
                                                    th
                                                        | Status
                                                    each food_name, food_num in order.foodList
                                                        tbody
                                                            tr
                                                                td
                                                                    | #{food_name}
                                                                td
                                                                    | #{food_num}
                                                                td
                                                                    if order.status
                                                                        label.badge.badge-gradient-success DONE
                                                                    else
                                                                        label.badge.badge-gradient-process PROGRESS

